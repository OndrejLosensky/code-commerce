// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Produkt {
  id String @id @default(uuid())
  name String
  price Int
  filePath String
  imagePath String
  description String
  isAvailable Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt 
  orders Objednavka[]
  downloadControl DownloadControl[]
}

model Uzivatel {
  id String @id @default(uuid())
  email String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders Objednavka[]
}

model Objednavka {
  id String @id @default(uuid())
  pricePaid Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt 
  userId String
  produktId String
  user Uzivatel @relation(fields: [userId], references: [id], onDelete: Cascade )
  produkt Produkt @relation(fields: [produktId], references: [id], onDelete: Restrict )
}

model DownloadControl {
  id String @id @default(uuid())
  expiresAt DateTime
  createdAt DateTime @default(now())
  produktId String
  produkt Produkt @relation(fields: [produktId], references: [id], onDelete: Cascade )
}

model Visit {
  id     Int      @id @default(autoincrement())
  count  Int      @default(0)
}

model Homepage {
  id     String @id
  styles String
}